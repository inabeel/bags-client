<div id="product-popup" class="product-popup white-popup mfp-with-anim">
	<div class="row">
		<div class="col-xs-12 col-sm-5 col-lg-4">
			<div id="product-gallery" class="carousel slide mb10" data-ride="carousel" data-interval="false">
				<!-- Wrapper for slides -->
				<div class="carousel-inner" role="listbox">
					{{#each images}}
					<div class="item {{#ifCond @index '==' 0}}active{{/ifCond}} thumb-image">
						<img src="{{large}}" data-imagezoom="{{large}}" data-zoomviewsize="[360,360]" data-magnification="3" alt="">
					</div>
					{{/each}}
				</div>
				<!-- Indicators -->
				<div class="thumbnail-container">
					{{#isLengthOf images ">" 3}}
					<a href="javascript:void(0)" onclick="ThumbnailScroll('left')" class="thumbnail-arrow"><i class="fa fa-angle-left text-primary"></i></a>
					{{/isLengthOf}}
					<div class="thumbnail-scroll">
						<ol class="carousel-indicators">
							{{#each images}}
							<li data-target="#product-gallery" data-slide-to="{{@index}}" class="{{#ifCond @index '==' 0}}active{{/ifCond}} ">
								<img src="{{small}}" alt="">
							</li>
							{{/each}}
						</ol>
					</div>
					{{#isLengthOf images ">" 3}}
					<a href="javascript:void(0)" onclick="ThumbnailScroll('right')" class="thumbnail-arrow"><i class="fa fa-angle-right text-primary"></i></a>
					{{/isLengthOf}}
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-sm-7 col-lg-8">
			<div id="product-popup-right-column" style="position:relative">
				<div class="product-name">
					{{titleCase name}}
				</div>
				<div class="product-tags">
					{{#each tags}}
						<button tag-id="{{id}}" type="button" class="btn {{colorTag category.id}} tag">#{{category.name}}: {{name}}</button>
					{{/each}}
				</div>
				<div class="price">
				   <span class="currency-sign">$</span>{{price}}
				</div>
				<div class="product-popup-buttons">
					<div class="row">
						<div class="col-xs-12 col-sm-7 mt47">
							<div class="popup-buy">
								<a id="btn-buy" href="{{purchase_urls.[0]}}" target="_blank" class="btn bgm-yellow btn-lg" onclick="(window.uetq || []).push({ 'ec':'Amazon', 'ea':'Click', 'el':'{{purchase_urls.[0]}}' }); return true;"><i class="fa fa-amazon"></i> Buy <span class="hidden-xs hidden-sm">It</span> From Amazon<span class="hidden-xs hidden-sm">.com</span></a>
							</div>
						</div>
						<div class="col-xs-12 col-sm-5 mt20">
							<div class="popup-social-share">
								<div class="mb10"><i class="fa fa-share-alt"></i> Share this Bag</div>
								<div>
									<button class="btn bgm-facebook btn-lg social-share-button mr1" type="button" onclick="ShareLink('facebook', 'product');">
										<i class="fa fa-facebook"></i>
									</button>
									<button class="btn bgm-lightblue btn-lg social-share-button twitter mr1" type="button" onclick="ShareLink('twitter', 'product','{{images.[0].large}}','{{titleCase name}}','{{getBrandName tags}}');">
										<i class="fa fa-twitter"></i>
									</button>
									<button class="btn btn-danger btn-lg dropdown-toggle social-share-button googleplus" type="button" onclick="ShareLink('googleplus', 'product','{{images.[0].large}}');">
										<i class="fa fa-google-plus"></i>
									</button>
									<button class="btn bgm-pinterest btn-lg dropdown-toggle social-share-button pinterest" type="button" onclick="ShareLink('pinterest', 'product','{{images.[0].large}}','{{titleCase name}}','{{getBrandName tags}}');">
										<i class="fa fa-pinterest-p"></i>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<button type="button" class="btn btn-default btn-lg popup-btn-close visible-xs" onclick="$.magnificPopup.close();">
		Close
	</button>
</div>
