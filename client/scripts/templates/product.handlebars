{{#isLengthOf products "==" 0}}
	<div class="pl5 pr5">
		<div class="msg-products-not-found"><i class="fa fa-search"></i> Sorry, no bag found matching your search</div>
	</div>
{{/isLengthOf}}
{{#each products}}
	{{#isLengthOf images ">" 0}}
		<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-2">
			<div class="card product-card">
				<div class="card-header">
					<div class="card-body">
						<div id="product-{{id}}" class="owl-carousel slide">
							{{#each images}}
								<a href="/app/product/{{../id}}" target="_blank" onclick="if(event.which != 2){TriggerProductPopup('{{../id}}');return false;}">
									<img class="lazyOwl" data-src="{{medium}}" alt="">
								</a>
							{{/each}}
						</div>
					</div>
				</div>
				<div class="card-body product-details">
					<div class="price">${{price}}</div>
					<div class="tags-container">
						{{#if tags}}
							{{#each tags}}
								{{#ifCond @index "<" 5}}
									<button index="{{@index}}" tag-id="{{id}}" type="button" class="btn {{colorTag category.id}} tag">#{{category.name}}: {{name}}</button>
								{{/ifCond}}
							{{/each}}
							{{#isLengthOf tags ">" 5}}
								<div class="dropdown dropup inline-block">
									<a href="#" class="dropdown-toggle btn btn-sm tag-more btn-default mt10" data-toggle="dropdown" aria-expanded="true">+{{countMoreLength tags}}</a>
									<ul class="dropdown-menu tags-popup">
										{{#each tags}}
											{{#ifCond @index ">=" 5}}
												<li>
													<button tag-id="{{id}}" type="button" class="btn {{colorTag category.id}} tag">#{{category.name}}: {{name}}</button>
												</li>
											{{/ifCond}}
										{{/each}}
									</ul>
								</div>
							{{/isLengthOf}}
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	{{/isLengthOf}}
{{/each}}